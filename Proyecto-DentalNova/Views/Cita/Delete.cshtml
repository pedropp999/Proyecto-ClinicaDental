@model DentalNova.Core.Repository.Entities.Cita

@{
    ViewData["Title"] = "Eliminar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Cancelación y Eliminación</h2>
            </div>
            <div class="card-body text-center p-4">
                <p class="lead">¿Estás seguro de que deseas eliminar permanentemente la siguiente cita?</p>

                <div class="my-4">
                    <i class="bi bi-calendar-x display-1 text-danger"></i>
                    <h3 class="display-6 mt-3">Cita del @Model.FechaHora.ToString("D")</h3>
                    <p class="text-muted fs-5">Paciente: @Model.Paciente?.Usuario?.Nombre @Model.Paciente?.Usuario?.Apellidos</p>
                </div>

                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-shield-exclamation"></i> <strong>¡Acción Irreversible!</strong> Al eliminar la cita, también se borrarán todos los tratamientos y registros asociados a ella.
                </div>
            </div>
            <div class="card-footer text-end bg-light p-3">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> No, conservar cita
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sí, Eliminar Cita
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>