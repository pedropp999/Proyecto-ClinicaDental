@model Proyecto_DentalNova.Models.CitaViewModel.CitaVM

@{
    ViewData["Title"] = "Agendar Nueva Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <partial name="_CitaFormulario" />
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary"><i class="bi bi-calendar-check"></i> Agendar Cita</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}