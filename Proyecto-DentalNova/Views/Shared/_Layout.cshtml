<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentalNova</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Proyecto_DentalNova.styles.css" asp-append-version="true" /> *@

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-light">

    <div class="d-flex" id="wrapper">

        <div class="bg-dark text-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 fs-4 fw-bold text-uppercase border-bottom border-secondary">
                <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">
                    <i class="bi bi-heart-pulse-fill text-primary me-2"></i> DentalNova
                </a>
            </div>

            <div class="list-group list-group-flush my-3">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-home me-2"></i> Inicio
                </a>

                <div class="sidebar-subheading text-muted text-uppercase small fw-bold px-3 mt-4 mb-2">Operaciones</div>
                <a asp-controller="Cita" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="bi bi-calendar-plus me-2"></i> Agendar Cita
                </a>

                <div class="sidebar-subheading text-muted text-uppercase small fw-bold px-3 mt-4 mb-2">Administración</div>
                <a asp-controller="Usuario" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-users-cog me-2"></i> Usuarios
                </a>
                <a asp-controller="Paciente" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-user-injured me-2"></i> Pacientes
                </a>
                <a asp-controller="Odontologo" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-user-md me-2"></i> Odontólogos
                </a>
                <a asp-controller="Tratamiento" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-notes-medical me-2"></i> Tratamientos
                </a>
            </div>
        </div>

        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-3">
                <div class="d-flex align-items-center w-100">
                    <button class="btn btn-light border" id="menu-toggle"><i class="fas fa-bars"></i></button>
                    <h5 class="ms-3 mb-0 text-muted d-none d-md-block">@ViewData["Title"]</h5>

                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <span class="fw-bold small">@User.Identity.Name</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="navbarDropdown">
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout">
                                        <button type="button" onclick="this.form.submit()" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm px-4 rounded-pill" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4 py-4">
                <partial name="_Notifications" />
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_Notifications" />
    

    <script>
        $(document).ready(function() {
            // Toggle del Menú Lateral
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });

            // Activar Tooltips de Bootstrap globalmente
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
              return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


