@model Proyecto_DentalNova.Models.TratamientoViewModel.TratamientoIndexViewModel

@{
    ViewData["Title"] = "Catálogo de Tratamientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Administración de precios y servicios clínicos.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus-circle me-2"></i> Nuevo Tratamiento
    </a>
</div>

<div class="row g-4">

    <div class="col-12 col-xl-3">
        <div class="card shadow-sm border-0 sticky-top" style="top: 1rem; z-index: 100;">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-filter me-2"></i> Buscar Servicio</h6>
            </div>
            <div class="card-body">
                <form method="get" class="vstack gap-3">

                    <div>
                        <label asp-for="Filtro.Id" class="form-label small fw-bold text-muted text-uppercase">Código ID</label>
                        <input asp-for="Filtro.Id" class="form-control" placeholder="#" />
                    </div>

                    <div>
                        <label asp-for="Filtro.NombreLike" class="form-label small fw-bold text-muted text-uppercase">Nombre / Descripción</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                            <input asp-for="Filtro.NombreLike" class="form-control border-start-0" placeholder="Ej. Ortodoncia..." />
                        </div>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase">Rango de Costo ($)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">$</span>
                            <input asp-for="Filtro.CostoMin" class="form-control" type="number" step="0.01" placeholder="Min" min="0" />
                            <input asp-for="Filtro.CostoMax" class="form-control" type="number" step="0.01" placeholder="Max" min="0" />
                        </div>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase">Duración (Días)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="far fa-clock"></i></span>
                            <input asp-for="Filtro.DuracionMin" class="form-control" type="number" placeholder="Min" step="1" min="0" />
                            <input asp-for="Filtro.DuracionMax" class="form-control" type="number" placeholder="Max" step="1" min="0" />
                        </div>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase d-block mb-2">Disponibilidad</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="Filtro.Activo" value="" id="estadoTodos" @(Model.Filtro.Activo == null ? "checked" : "") autocomplete="off">
                            <label class="btn btn-outline-secondary" for="estadoTodos">Todos</label>

                            <input type="radio" class="btn-check" name="Filtro.Activo" value="true" id="estadoActivo" @(Model.Filtro.Activo == true ? "checked" : "") autocomplete="off">
                            <label class="btn btn-outline-success" for="estadoActivo">Activos</label>

                            <input type="radio" class="btn-check" name="Filtro.Activo" value="false" id="estadoInactivo" @(Model.Filtro.Activo == false ? "checked" : "") autocomplete="off">
                            <label class="btn btn-outline-danger" for="estadoInactivo">Inactivos</label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary fw-bold"><i class="fas fa-search me-2"></i> Filtrar</button>
                        <a asp-action="Index" class="btn btn-light text-muted border">Limpiar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-9">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Tratamientos Disponibles</h6>
                <span class="badge bg-primary rounded-pill">@Model.Resultados?.TotalCount</span>
            </div>

            <div class="card-body p-0">
                <form method="get" class="m-0 p-0">
                    @Html.AntiForgeryToken()
                    @foreach (var prop in Model.Filtro.GetType().GetProperties())
                    {
                        var value = prop.GetValue(Model.Filtro);
                        if (value != null && prop.Name != "Page" && prop.Name != "PageSize" && prop.Name != "Activo")
                        {
                            <input type="hidden" name="Filtro.@prop.Name" value="@value" />
                        }
                    }
                    @if (Model.Filtro.Activo.HasValue)
                    {
                        <input type="hidden" name="Filtro.Activo" value="@Model.Filtro.Activo.Value.ToString().ToLower()" />
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Tratamiento</th>
                                    <th>Costo</th>
                                    <th>Duración Est.</th>
                                    <th>Estado</th>
                                    <th class="text-end pe-4">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Resultados != null && Model.Resultados.Any())
                                {
                                    foreach (var item in Model.Resultados)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info bg-opacity-10 text-info rounded p-2 me-3">
                                                        <i class="fas fa-briefcase-medical fa-lg"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold text-dark">@item.Nombre</div>
                                                        <small class="text-muted d-block text-truncate" style="max-width: 250px;">
                                                            @item.Descripcion
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <span class="fw-bold text-success">
                                                    @item.Costo.ToString("C")
                                                </span>
                                            </td>

                                            <td>
                                                <span class="badge bg-light text-dark border fw-normal">
                                                    <i class="far fa-clock me-1"></i> @item.DuracionDias días
                                                </span>
                                            </td>

                                            <td>
                                                @if (item.Activo)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">
                                                        <i class="fas fa-check-circle me-1"></i> Activo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-3">
                                                        <i class="fas fa-ban me-1"></i> Inactivo
                                                    </span>
                                                }
                                            </td>

                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id" title="Detalles" data-bs-toggle="tooltip">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar" data-bs-toggle="tooltip">
                                                        <i class="fas fa-pen"></i>
                                                    </a>

                                                    <button type="button"
                                                            onclick="confirmarCambioEstado(@item.Id, '@Html.Raw(item.Nombre)', @item.Activo.ToString().ToLower())"
                                                            class="btn btn-sm @(item.Activo ? "btn-outline-danger" : "btn-outline-success")"
                                                            title="@(item.Activo ? "Desactivar" : "Activar")"
                                                            data-bs-toggle="tooltip">
                                                        <i class="fas @(item.Activo ? "fa-toggle-on" : "fa-toggle-off")"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center py-5 text-muted">No se encontraron tratamientos.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.Resultados != null && Model.Resultados.Any())
                    {
                        <div class="card-footer bg-white border-top-0 py-3">
                            @await Html.PartialAsync("_Pagination", Model.Resultados)
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar Tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Función SweetAlert para Cambiar Estado
        function confirmarCambioEstado(id, nombre, esActivo) {

            // Definir textos y colores según si vamos a Activar o Desactivar
            const titulo = esActivo ? '¿Desactivar Tratamiento?' : '¿Activar Tratamiento?';
            const texto = esActivo
                ? `El tratamiento "${nombre}" dejará de estar visible para nuevas citas.`
                : `El tratamiento "${nombre}" estará disponible nuevamente.`;
            const icon = esActivo ? 'warning' : 'question';
            const confirmBtnColor = esActivo ? '#dc3545' : '#198754'; // Rojo o Verde
            const confirmBtnText = esActivo ? 'Sí, desactivar' : 'Sí, activar';

            Swal.fire({
                title: titulo,
                text: texto,
                icon: icon,
                showCancelButton: true,
                confirmButtonColor: confirmBtnColor,
                cancelButtonColor: '#6c757d',
                confirmButtonText: confirmBtnText,
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Enviar formulario POST dinámico
                    var form = document.createElement('form');
                    form.method = 'post';
                    form.action = '@Url.Action("ToggleActivo")'; // Asegúrate que esta acción exista en tu controlador

                    // Input ID
                    var inputId = document.createElement('input');
                    inputId.type = 'hidden';
                    inputId.name = 'id';
                    inputId.value = id;
                    form.appendChild(inputId);

                    // Token Antiforgery (Importante para seguridad)
                    var inputToken = document.createElement('input');
                    inputToken.type = 'hidden';
                    inputToken.name = '__RequestVerificationToken';

                    // Intentamos obtener el valor de un token existente en la página
                    var existingToken = document.querySelector('input[name="__RequestVerificationToken"]');
                    if(existingToken) {
                        inputToken.value = existingToken.value;
                        form.appendChild(inputToken);
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            })
        }
    </script>
}