@model Proyecto_DentalNova.Models.TratamientoViewModel.TratamientoVM

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3">
        <h6 class="m-0 fw-bold text-primary"><i class="fas fa-list-alt me-2"></i> Detalles del Servicio</h6>
    </div>
    <div class="card-body p-4">

        <div class="mb-4">
            <label asp-for="Tratamiento.Nombre" class="form-label fw-bold small text-muted text-uppercase">Nombre del Tratamiento</label>
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="fas fa-tag"></i></span>
                <input asp-for="Tratamiento.Nombre" class="form-control fw-bold text-dark" placeholder="Ej. Blanqueamiento Laser" />
            </div>
            <span asp-validation-for="Tratamiento.Nombre" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Tratamiento.Descripcion" class="form-label fw-bold small text-muted text-uppercase">Descripción (Opcional)</label>
            <textarea asp-for="Tratamiento.Descripcion" class="form-control" rows="3" placeholder="Detalles técnicos o inclusiones del servicio..."></textarea>
            <span asp-validation-for="Tratamiento.Descripcion" class="text-danger small"></span>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="Tratamiento.Costo" class="form-label fw-bold small text-muted text-uppercase">Costo al Público</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light text-success fw-bold">$</span>
                    <input asp-for="Tratamiento.Costo" type="number" step="0.01" min="0" class="form-control fw-bold text-success" placeholder="0.00" />
                </div>
                <span asp-validation-for="Tratamiento.Costo" class="text-danger small"></span>
                <div class="form-text small">Precio final con impuestos incluidos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Tratamiento.DuracionDias" class="form-label fw-bold small text-muted text-uppercase">Duración Estimada</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light"><i class="far fa-clock"></i></span>
                    <input asp-for="Tratamiento.DuracionDias" type="number" class="form-control" placeholder="1" step="1" min="0" />
                    <span class="input-group-text bg-light small text-muted">días</span>
                </div>
                <span asp-validation-for="Tratamiento.DuracionDias" class="text-danger small"></span>
                <div class="form-text small">Tiempo promedio para completar el tratamiento.</div>
            </div>
        </div>

        <hr class="my-4" />

        <div class="bg-light p-3 rounded border">
            <div class="form-check form-switch">
                <input asp-for="Tratamiento.Activo" class="form-check-input" type="checkbox" role="switch" id="switchActivo" style="width: 3em; height: 1.5em; margin-right: 1em;">
                <label class="form-check-label fw-bold pt-1" for="switchActivo">Disponibilidad en Catálogo</label>
            </div>
            <div class="text-muted small ms-5 mt-1">
                <i class="fas fa-info-circle me-1"></i> Si desactivas este tratamiento, no aparecerá para agendar nuevas citas.
            </div>
        </div>

    </div>
</div>