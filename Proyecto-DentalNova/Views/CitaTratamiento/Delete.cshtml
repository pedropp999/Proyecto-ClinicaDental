@model DentalNova.Core.Repository.Entities.CitaTratamiento

@{
    ViewData["Title"] = "Quitar Tratamiento de la Cita";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Acción</h2>
            </div>
            <div class="card-body text-center p-4">
                <p class="lead">¿Estás seguro de que deseas quitar el siguiente tratamiento de esta cita?</p>
                <div class="my-4">
                    <i class="bi bi-trash3 display-1 text-danger"></i>
                    <h3 class="display-6 mt-3">@Model.Tratamiento?.Nombre</h3>
                </div>
            </div>
            <div class="card-footer text-end bg-light p-3">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Details" asp-controller="Cita" asp-route-id="@Model.CitaId" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sí, Quitar Tratamiento
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>