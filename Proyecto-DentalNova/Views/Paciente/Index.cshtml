@model Proyecto_DentalNova.Models.PacienteViewModel.PacienteIndexViewModel

@{
    ViewData["Title"] = "Expedientes de Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Gestión de datos médicos y contacto de pacientes.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-user-plus me-2"></i> Nuevo Paciente
    </a>
</div>

<div class="row g-4">

    <div class="col-12 col-xl-3">
        <div class="card shadow-sm border-0 sticky-top" style="top: 1rem; z-index: 100;">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-filter me-2"></i> Búsqueda Avanzada</h6>
            </div>
            <div class="card-body">
                <form method="get" class="vstack gap-3">

                    <div>
                        <label asp-for="Filtro.Id" class="form-label small fw-bold text-muted text-uppercase">N° Expediente</label>
                        <input asp-for="Filtro.Id" class="form-control" placeholder="#" />
                    </div>

                    <div>
                        <label asp-for="Filtro.NombreLike" class="form-label small fw-bold text-muted text-uppercase">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-user text-muted"></i></span>
                            <input asp-for="Filtro.NombreLike" class="form-control border-start-0" placeholder="Buscar..." />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Filtro.ApellidosLike" class="form-label small fw-bold text-muted text-uppercase">Apellidos</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-user-tag text-muted"></i></span>
                            <input asp-for="Filtro.ApellidosLike" class="form-control border-start-0" placeholder="Buscar..." />
                        </div>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase">Rango de Edad</label>
                        <div class="input-group">
                            <input asp-for="Filtro.EdadMin" class="form-control" placeholder="Min" type="number" step="1" min="0" />
                            <span class="input-group-text bg-light">-</span>
                            <input asp-for="Filtro.EdadMax" class="form-control" placeholder="Max" type="number" step="1" min="0" />
                        </div>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase">Fecha Registro</label>
                        <input asp-for="Filtro.FechaDesde" type="date" class="form-control mb-2" />
                        <input asp-for="Filtro.FechaHasta" type="date" class="form-control" />
                    </div>

                    <div class="border-top pt-3 mt-2">
                        <label class="form-label small fw-bold text-muted text-uppercase mb-2">Condiciones Médicas</label>

                        <div class="form-check">
                            <input asp-for="Filtro.ConAlergias" class="form-check-input" />
                            <label asp-for="Filtro.ConAlergias" class="form-check-label text-dark">Con Alergias</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Filtro.ConEnfermedadesCronicas" class="form-check-input" />
                            <label asp-for="Filtro.ConEnfermedadesCronicas" class="form-check-label text-dark">Enf. Crónicas</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Filtro.ConMedicamentosActuales" class="form-check-input" />
                            <label asp-for="Filtro.ConMedicamentosActuales" class="form-check-label text-dark">Medicados</label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary fw-bold"><i class="fas fa-search me-2"></i> Buscar</button>
                        <a href="@Url.Action("Index")" class="btn btn-light text-muted border">Limpiar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-9">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Pacientes Encontrados</h6>
                <span class="badge bg-primary rounded-pill">@Model.Resultados?.TotalCount</span>
            </div>

            <div class="card-body p-0">
                <form method="get" class="m-0 p-0">
                    @foreach (var prop in Model.Filtro.GetType().GetProperties())
                    {
                        var value = prop.GetValue(Model.Filtro);
                        if (value != null && prop.Name != "Page" && prop.Name != "PageSize" && (value.GetType() != typeof(bool) || (bool)value))
                        {
                            <input type="hidden" name="Filtro.@prop.Name" value="@value" />
                        }
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Paciente</th>
                                    <th>Edad</th>
                                    <th>Registro</th>
                                    <th class="text-center">Alertas Médicas</th>
                                    <th class="text-end pe-4">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Resultados != null && Model.Resultados.Any())
                                {
                                    foreach (var item in Model.Resultados)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    @{
                                                        var iniciales = (!string.IsNullOrEmpty(item.Nombre) ? item.Nombre.Substring(0, 1) : "") +
                                                        (!string.IsNullOrEmpty(item.Apellidos) ? item.Apellidos.Substring(0, 1) : "");
                                                    }
                                                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex justify-content-center align-items-center me-3 fw-bold"
                                                         style="width: 40px; height: 40px; font-size: 0.9rem;">
                                                        @iniciales
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold text-dark">@item.Nombre @item.Apellidos</div>
                                                        <small class="text-muted d-block"><i class="fas fa-phone-alt me-1 text-secondary"></i> @(item.Telefono ?? "Sin Tel")</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>@item.Edad años</td>

                                            <td><span class="text-muted small">@item.FechaCreacion.ToShortDateString()</span></td>

                                            <td class="text-center">
                                                @if (!item.ConAlergias && !item.ConEnfermedadesCronicas && !item.ConMedicamentosActuales)
                                                {
                                                    <span class="badge bg-light text-muted border fw-normal">Sano</span>
                                                }
                                                else
                                                {
                                                    @if (item.ConAlergias)
                                                    {
                                                        <span class="badge bg-warning text-dark me-1" data-bs-toggle="tooltip" title="Tiene Alergias">
                                                            <i class="fas fa-allergies"></i>
                                                        </span>
                                                    }
                                                    @if (item.ConEnfermedadesCronicas)
                                                    {
                                                        <span class="badge bg-danger me-1" data-bs-toggle="tooltip" title="Enfermedad Crónica">
                                                            <i class="fas fa-heartbeat"></i>
                                                        </span>
                                                    }
                                                    @if (item.ConMedicamentosActuales)
                                                    {
                                                        <span class="badge bg-info text-dark me-1" data-bs-toggle="tooltip" title="Toma Medicamentos">
                                                            <i class="fas fa-pills"></i>
                                                        </span>
                                                    }
                                                }
                                            </td>

                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Expediente">
                                                        <i class="fas fa-file-medical"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-pen"></i>
                                                    </a>

                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fas fa-user-injured fa-3x mb-3 opacity-25"></i>
                                                <h5>No se encontraron pacientes</h5>
                                                <p class="mb-0">Intenta ajustar los criterios de búsqueda.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Resultados != null && Model.Resultados.Any())
                    {
                        <div class="card-footer bg-white border-top-0 py-3">
                            @await Html.PartialAsync("_Pagination", Model.Resultados)
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

