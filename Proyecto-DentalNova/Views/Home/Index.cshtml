@{
    ViewData["Title"] = "Panel de Control";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Bienvenido, Dr. Administrador</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Exportar Reporte</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle">
            <i class="fas fa-calendar-alt me-1"></i> Esta Semana
        </button>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card shadow-sm border-0 border-start border-primary border-4 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-0 small text-uppercase fw-bold">Citas para Hoy</p>
                        <h3 class="fw-bold text-dark mb-0">12</h3>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded p-3">
                        <i class="fas fa-calendar-check fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-success bg-opacity-10 text-success"><i class="fas fa-arrow-up"></i> 10%</span>
                    <span class="text-muted small">vs ayer</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card shadow-sm border-0 border-start border-success border-4 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-0 small text-uppercase fw-bold">Pacientes Nuevos</p>
                        <h3 class="fw-bold text-dark mb-0">5</h3>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded p-3">
                        <i class="fas fa-user-plus fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-success bg-opacity-10 text-success">+3</span>
                    <span class="text-muted small">registrados hoy</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card shadow-sm border-0 border-start border-info border-4 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-0 small text-uppercase fw-bold">Ingresos (Mes)</p>
                        <h3 class="fw-bold text-dark mb-0">$45,200</h3>
                    </div>
                    <div class="icon-shape bg-info bg-opacity-10 text-info rounded p-3">
                        <i class="fas fa-dollar-sign fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-muted small">Pendiente de cobro: </span>
                    <span class="fw-bold text-danger">$1,200</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card shadow-sm border-0 border-start border-warning border-4 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-0 small text-uppercase fw-bold">En Espera</p>
                        <h3 class="fw-bold text-dark mb-0">3</h3>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded p-3">
                        <i class="fas fa-clock fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-muted small">Sala de espera actual</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-lg-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Flujo de Pacientes (Últimos 6 meses)</h6>
                <i class="fas fa-chart-area text-muted"></i>
            </div>
            <div class="card-body">
                <canvas id="chartPacientes" style="max-height: 350px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-primary">Próximas Citas</h6>
            </div>
            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex align-items-center p-3 border-0 border-bottom">
                    <div class="flex-shrink-0">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            10:00
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 fw-bold">Maria López</h6>
                        <small class="text-muted">Limpieza General - Dr. Pérez</small>
                    </div>
                    <button class="btn btn-sm btn-light text-primary"><i class="fas fa-eye"></i></button>
                </div>

                <div class="list-group-item d-flex align-items-center p-3 border-0 border-bottom">
                    <div class="flex-shrink-0">
                        <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            11:30
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 fw-bold">Carlos Ruiz</h6>
                        <small class="text-muted">Extracción Muela - Dra. Ana</small>
                    </div>
                    <button class="btn btn-sm btn-light text-primary"><i class="fas fa-eye"></i></button>
                </div>

                <div class="list-group-item d-flex align-items-center p-3 border-0">
                    <div class="flex-shrink-0">
                        <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            13:00
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 fw-bold">Luis Torres</h6>
                        <small class="text-muted">Revisión Ortodoncia</small>
                    </div>
                    <button class="btn btn-sm btn-light text-primary"><i class="fas fa-eye"></i></button>
                </div>
            </div>
            <div class="card-footer bg-white text-center">
                <a asp-controller="Citas" asp-action="Index" class="text-decoration-none small fw-bold">Ver agenda completa <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Configuración del Gráfico de Pacientes
        const ctx = document.getElementById('chartPacientes').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio'], // Etiquetas eje X
                datasets: [{
                    label: 'Pacientes Atendidos',
                    data: [12, 19, 15, 25, 22, 30], // Datos eje Y (Simulados)
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    tension: 0.4, // Curvatura de la línea
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false // Ocultar leyenda si solo hay una línea
                    }
                }
            }
        });
    </script>
}