@model Proyecto_DentalNova.Models.RecordatorioViewModel.RecordatorioIndexViewModel

@{
    ViewData["Title"] = "Gestión de Recordatorios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Administración de recordatorios de citas.</p>
    </div>
    <div>
        <a asp-action="Pendientes" class="btn btn-warning me-2">
            <i class="fas fa-clock me-2"></i> Pendientes
        </a>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Nuevo Recordatorio
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold text-primary">Recordatorios</h6>
        <span class="badge bg-primary rounded-pill">@Model.Resultados?.TotalCount</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Paciente</th>
                        <th>Fecha Cita</th>
                        <th>Fecha Envío</th>
                        <th>Mensaje</th>
                        <th>Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Resultados != null && Model.Resultados.Any())
                    {
                        foreach (var item in Model.Resultados)
                        {
                            <tr>
                                <td class="fw-bold">@item.PacienteNombre</td>
                                <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.FechaEnvio.HasValue)
                                    {
                                        @item.FechaEnvio.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No programada</span>
                                    }
                                </td>
                                <td>
                                    <small>@(item.Mensaje?.Length > 50 ? item.Mensaje.Substring(0, 50) + "..." : item.Mensaje)</small>
                                </td>
                                <td>
                                    @if (item.Enviado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i> Enviado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock me-1"></i> Pendiente
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!item.Enviado)
                                        {
                                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <form asp-action="MarcarEnviado" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Marcar como enviado">
                                                    <i class="fas fa-paper-plane"></i>
                                                </button>
                                            </form>
                                        }
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-5 text-muted">No se encontraron recordatorios.</td></tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.Resultados != null && Model.Resultados.Any())
        {
            <div class="card-footer bg-white border-top-0 py-3">
                @await Html.PartialAsync("_Pagination", Model.Resultados)
            </div>
        }
    </div>
</div>
