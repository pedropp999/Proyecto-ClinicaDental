@model IEnumerable<DentalNova.Core.Dtos.RecordatorioDto>

@{
    ViewData["Title"] = "Recordatorios Pendientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Recordatorios que aún no han sido enviados.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Ver Todos
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 bg-warning bg-opacity-10">
        <h6 class="m-0 fw-bold text-warning">
            <i class="fas fa-exclamation-circle me-2"></i> Recordatorios Pendientes
        </h6>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Paciente</th>
                        <th>Fecha Cita</th>
                        <th>Mensaje</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.PacienteNombre</td>
                                <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><small>@(item.Mensaje?.Length > 80 ? item.Mensaje.Substring(0, 80) + "..." : item.Mensaje)</small></td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <form asp-action="MarcarEnviado" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-paper-plane me-1"></i> Marcar Enviado
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4" class="text-center py-5 text-success">
                            <i class="fas fa-check-circle fa-3x mb-3"></i>
                            <p class="mb-0">¡No hay recordatorios pendientes!</p>
                        </td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
