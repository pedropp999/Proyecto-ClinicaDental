@model DentalNova.Core.Dtos.RecordatorioDto

@{
    ViewData["Title"] = "Eliminar Recordatorio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Confirmar Eliminación</h5>
            </div>
            <div class="card-body">
                <p class="text-danger fw-bold">¿Está seguro de que desea eliminar este recordatorio?</p>
                
                <dl class="row">
                    <dt class="col-sm-4">Paciente:</dt>
                    <dd class="col-sm-8">@Model.PacienteNombre</dd>

                    <dt class="col-sm-4">Fecha Cita:</dt>
                    <dd class="col-sm-8">@Model.FechaCita.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Mensaje:</dt>
                    <dd class="col-sm-8">@Model.Mensaje</dd>

                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Enviado)
                        {
                            <span class="badge bg-success">Enviado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </dd>
                </dl>

                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Advertencia:</strong> Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="card-footer bg-white">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i> Eliminar Recordatorio
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
