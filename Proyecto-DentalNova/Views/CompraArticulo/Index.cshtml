@model Proyecto_DentalNova.Models.CompraArticuloViewModel.CompraArticuloIndexViewModel

@{
    ViewData["Title"] = "Gestión de Compras de Artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Registro de compras y gestión de inventario.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus-circle me-2"></i> Nueva Compra
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold text-primary">Historial de Compras</h6>
        <span class="badge bg-primary rounded-pill">@Model.Resultados?.TotalCount</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Fecha</th>
                        <th>Artículo</th>
                        <th>Proveedor</th>
                        <th>Cantidad</th>
                        <th>Precio Unit.</th>
                        <th>Subtotal</th>
                        <th>Método Pago</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Resultados != null && Model.Resultados.Any())
                    {
                        foreach (var item in Model.Resultados)
                        {
                            <tr>
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <strong>@item.ArticuloNombre</strong><br/>
                                    <small class="text-muted">Código: @item.ArticuloCodigo</small>
                                </td>
                                <td>@item.Proveedor</td>
                                <td><span class="badge bg-info">@item.Cantidad</span></td>
                                <td>@item.PrecioUnitario.ToString("C")</td>
                                <td class="fw-bold text-success">@item.Subtotal.ToString("C")</td>
                                <td>@item.MetodoPago</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center py-5 text-muted">No se encontraron compras.</td></tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.Resultados != null && Model.Resultados.Any())
        {
            <div class="card-footer bg-white border-top-0 py-3">
                @await Html.PartialAsync("_Pagination", Model.Resultados)
            </div>
        }
    </div>
</div>
