@model Proyecto_DentalNova.Models.OdontologoViewModel.OdontologoVM

<div class="row g-4">

    <div class="col-12 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-user-lock me-2"></i> Acceso al Sistema</h6>
            </div>
            <div class="card-body">

                <div class="alert alert-light border small text-muted mb-4">
                    <i class="fas fa-info-circle me-1 text-primary"></i>
                    Seleccione el usuario que tendrá el rol de Odontólogo.
                </div>

                <div class="mb-3">
                    <label asp-for="Odontologo.UsuarioId" class="form-label fw-bold small text-muted text-uppercase">Usuario</label>
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                        <div class="flex-grow-1" style="min-width: 0;">
                            <select asp-for="Odontologo.UsuarioId" class="form-select select2-usuario" id="usuarioSelect" asp-items="Model.UsuariosDisponibles" style="width: 100%;">
                                <option value="">Buscar usuario...</option>
                            </select>
                        </div>
                    </div>
                    <span asp-validation-for="Odontologo.UsuarioId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Odontologo.FechaIngreso" class="form-label fw-bold small text-muted text-uppercase">Fecha de Ingreso</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-calendar-alt"></i></span>
                        <input asp-for="Odontologo.FechaIngreso" type="date" class="form-control" />
                    </div>
                    <span asp-validation-for="Odontologo.FechaIngreso" class="text-danger small"></span>
                </div>

            </div>
        </div>
    </div>

    <div class="col-12 col-lg-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-briefcase-medical me-2"></i> Perfil Profesional</h6>
            </div>
            <div class="card-body">

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Odontologo.CedulaProfesional" class="form-label fw-bold small text-muted text-uppercase">Cédula Profesional</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-id-card"></i></span>
                            <input asp-for="Odontologo.CedulaProfesional" class="form-control" placeholder="Ej. 12345678" />
                        </div>
                        <span asp-validation-for="Odontologo.CedulaProfesional" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EspecialidadesSeleccionadasIds" class="form-label fw-bold small text-muted text-uppercase">Especialidades</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-tooth"></i></span>

                            <div class="flex-grow-1">
                                <select asp-for="EspecialidadesSeleccionadasIds"
                                        asp-items="Model.TodasLasEspecialidades"
                                        class="form-select select2-especialidades"
                                        multiple="multiple"
                                        style="width: 100%;">
                                </select>
                            </div>
                        </div>
                        <span asp-validation-for="EspecialidadesSeleccionadasIds" class="text-danger small"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="Odontologo.Institucion" class="form-label fw-bold small text-muted text-uppercase">Institución de Egreso</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-university"></i></span>
                            <input asp-for="Odontologo.Institucion" class="form-control" placeholder="Ej. Universidad Nacional..." />
                        </div>
                        <span asp-validation-for="Odontologo.Institucion" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Odontologo.AnioGraduacion" class="form-label fw-bold small text-muted text-uppercase">Año Graduación</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-graduation-cap"></i></span>
                            <input asp-for="Odontologo.AnioGraduacion" type="number" class="form-control" placeholder="Ej. 2015" />
                        </div>
                        <span asp-validation-for="Odontologo.AnioGraduacion" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top text-end">
                    <small class="text-muted"><i class="fas fa-asterisk text-danger me-1"></i> Campos obligatorios para la facturación y recetas.</small>
                </div>

            </div>
        </div>
    </div>
</div>