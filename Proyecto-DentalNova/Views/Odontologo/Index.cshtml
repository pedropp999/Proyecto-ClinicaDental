@model Proyecto_DentalNova.Models.OdontologoViewModel.OdontologoIndexViewModel

@{
    ViewData["Title"] = "Directorio Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Gestión de especialistas y personal médico.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-user-md me-2"></i> Nuevo Odontólogo
    </a>
</div>

<div class="row g-4">

    <div class="col-12 col-xl-3">
        <div class="card shadow-sm border-0 sticky-top" style="top: 1rem; z-index: 100;">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-filter me-2"></i> Filtros</h6>
            </div>
            <div class="card-body">
                <form method="get" class="vstack gap-3">

                    <div>
                        <label asp-for="Filtro.Id" class="form-label small fw-bold text-muted text-uppercase">ID / Cód.</label>
                        <input asp-for="Filtro.Id" class="form-control" placeholder="#" />
                    </div>

                    <div>
                        <label asp-for="Filtro.NombreLike" class="form-label small fw-bold text-muted text-uppercase">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-user-md text-muted"></i></span>
                            <input asp-for="Filtro.NombreLike" class="form-control border-start-0" placeholder="Buscar..." />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Filtro.ApellidosLike" class="form-label small fw-bold text-muted text-uppercase">Apellidos</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-user-tag text-muted"></i></span>
                            <input asp-for="Filtro.ApellidosLike" class="form-control border-start-0" placeholder="Buscar..." />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Filtro.CorreoLike" class="form-label small fw-bold text-muted text-uppercase">Correo</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope text-muted"></i></span>
                            <input asp-for="Filtro.CorreoLike" class="form-control border-start-0" placeholder="@("@")" />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Filtro.CedulaLike" class="form-label small fw-bold text-muted text-uppercase">Cédula Prof.</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-id-card text-muted"></i></span>
                            <input asp-for="Filtro.CedulaLike" class="form-control border-start-0" placeholder="Num. Cédula" />
                        </div>
                    </div>

                    <div>
                        <label asp-for="Filtro.EspecialidadId" class="form-label small fw-bold text-muted text-uppercase">Especialidad</label>
                        <select asp-for="Filtro.EspecialidadId" asp-items="@(new SelectList(Model.Filtro.EspecialidadesDisponibles, "Value", "Text"))" class="form-select">
                            <option value="">Todas</option>
                        </select>
                    </div>

                    <div>
                        <label class="form-label small fw-bold text-muted text-uppercase">Fecha Ingreso</label>
                        <div class="input-group">
                            <input asp-for="Filtro.FechaIngresoDesde" type="date" class="form-control" placeholder="Desde" />
                            <input asp-for="Filtro.FechaIngresoHasta" type="date" class="form-control" placeholder="Hasta" />
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-2">
                        <button type="submit" class="btn btn-primary fw-bold"><i class="fas fa-search me-2"></i> Buscar</button>
                        <a href="@Url.Action("Index")" class="btn btn-light text-muted border">Limpiar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-9">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">Odontólogos Encontrados</h6>
                <span class="badge bg-primary rounded-pill">@Model.Resultados?.TotalCount</span>
            </div>

            <div class="card-body p-0">
                <form method="get" class="m-0 p-0">
                    @foreach (var prop in Model.Filtro.GetType().GetProperties().Where(p => !p.Name.Contains("Disponibles")))
                    {
                        var value = prop.GetValue(Model.Filtro);
                        if (value != null && prop.Name != "Page" && prop.Name != "PageSize")
                        {
                            <input type="hidden" name="Filtro.@prop.Name" value="@value" />
                        }
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Doctor(a)</th>
                                    <th>Credenciales</th>
                                    <th>Especialidades</th>
                                    <th>Ingreso</th>
                                    <th class="text-end pe-4">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Resultados != null && Model.Resultados.Any())
                                {
                                    foreach (var item in Model.Resultados)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    @{
                                                        var iniciales = (!string.IsNullOrEmpty(item.Nombre) ? item.Nombre.Substring(0, 1) : "") +
                                                        (!string.IsNullOrEmpty(item.Apellidos) ? item.Apellidos.Substring(0, 1) : "");
                                                    }
                                                    <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3 fw-bold shadow-sm"
                                                         style="width: 45px; height: 45px; font-size: 0.9rem;">
                                                        @iniciales
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold text-dark">Dr(a). @item.Nombre @item.Apellidos</div>
                                                        <small class="text-muted d-block">
                                                            <i class="fas fa-envelope me-1 text-secondary small"></i> @item.CorreoElectronico
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-id-badge text-muted fs-4 me-2 opacity-50"></i>
                                                    <div>
                                                        <span class="d-block small text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Cédula Prof.</span>
                                                        <span class="font-monospace fw-bold text-dark">@item.CedulaProfesional</span>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                @if (item.Especialidades != null && item.Especialidades.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var especialidad in item.Especialidades)
                                                        {
                                                            <span class="badge rounded-pill bg-light text-dark border fw-normal">
                                                                <i class="fas fa-tooth text-primary me-1 small"></i> @especialidad
                                                            </span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small fst-italic">General</span>
                                                }
                                            </td>

                                            <td>
                                                <small class="text-muted"><i class="far fa-calendar-alt me-1"></i> @item.FechaIngreso.ToShortDateString()</small>
                                            </td>

                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Ver Perfil" data-bs-toggle="tooltip">
                                                        <i class="fas fa-user-md"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar" data-bs-toggle="tooltip">
                                                        <i class="fas fa-pen"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar" data-bs-toggle="tooltip">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fas fa-user-md fa-3x mb-3 opacity-25"></i>
                                                <h5>No se encontraron odontólogos</h5>
                                                <p class="mb-0">Ajusta los filtros o registra uno nuevo.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Resultados != null && Model.Resultados.Any())
                    {
                        <div class="card-footer bg-white border-top-0 py-3">
                            @await Html.PartialAsync("_Pagination", Model.Resultados)
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}