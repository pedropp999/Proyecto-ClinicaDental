@model DentalNova.Core.Dtos.OdontologoDto

@{
    ViewData["Title"] = "Eliminar Odontólogo";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Generar iniciales para el avatar
    var iniciales = (!string.IsNullOrEmpty(Model.Nombre) ? Model.Nombre.Substring(0, 1) : "") +
                    (!string.IsNullOrEmpty(Model.Apellidos) ? Model.Apellidos.Substring(0, 1) : "");
}

<div class="row justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">

        <div class="card shadow border-0 border-top border-danger border-5">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex justify-content-center align-items-center mx-auto"
                         style="width: 100px; height: 100px;">
                        <i class="fas fa-user-slash fa-3x"></i>
                    </div>
                </div>

                <h2 class="fw-bold text-dark">¿Eliminar Especialista?</h2>
                <p class="text-muted mb-4">Se eliminará permanentemente el perfil profesional de:</p>

                <div class="card bg-light border-0 mb-4 text-start">
                    <div class="card-body d-flex align-items-center p-3">
                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3 fw-bold flex-shrink-0 shadow-sm"
                             style="width: 50px; height: 50px; font-size: 1.2rem;">
                            @iniciales
                        </div>
                        <div class="overflow-hidden">
                            <h5 class="fw-bold mb-0 text-dark text-truncate">Dr(a). @Model.Nombre @Model.Apellidos</h5>
                            <small class="text-muted d-block text-truncate">
                                <i class="fas fa-id-badge me-1"></i> Cédula: @Model.CedulaProfesional
                            </small>
                        </div>
                    </div>
                </div>

                <div class="alert alert-danger d-flex align-items-start small text-start">
                    <i class="fas fa-exclamation-triangle me-2 mt-1 flex-shrink-0"></i>
                    <div>
                        <strong>Acción Crítica:</strong> Al eliminar este perfil, el odontólogo perderá acceso inmediato al sistema y no podrá ser asignado a nuevas citas.
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4 d-grid gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm">
                        <i class="fas fa-trash-alt me-2"></i> Confirmar Baja
                    </button>

                    <a asp-action="Index" class="btn btn-light text-muted border">
                        Cancelar Operación
                    </a>
                </form>

            </div>
        </div>
    </div>
</div>