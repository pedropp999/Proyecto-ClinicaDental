@model Proyecto_DentalNova.Models.OdontologoViewModel.OdontologoVM

@{
    ViewData["Title"] = "Editar Odontólogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-xl-11">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold text-dark mb-0">Editar Perfil Médico</h2>
                <p class="text-muted mb-0">Actualización de credenciales y especialidades.</p>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
        </div>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Odontologo.Id" />

          @*   <input type="hidden" asp-for="Odontologo.UsuarioId" /> *@

            <partial name="_OdontologoFormulario" model="Model" />

            <div class="d-flex justify-content-end gap-2 mt-4 pb-5">
                <a asp-action="Index" class="btn btn-light border px-4">Cancelar</a>
                <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                    <i class="fas fa-sync-alt me-2"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('.select2-usuario').select2({
                theme: 'bootstrap-5',
                placeholder: 'Buscar usuario...',
                width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
            });

            $('.select2-especialidades').select2({
                theme: 'bootstrap-5',
                placeholder: 'Seleccione especialidades...',
                width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
                closeOnSelect: false
            });
            
            $('#usuarioSelect').prop('disabled', true);
        });

    </script>
}